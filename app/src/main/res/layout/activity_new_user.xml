<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:padding="20dp">

        <hu.wuhanizer.notSoFar.ui.view.FontTextView
            android:layout_above="@+id/btn_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="Add meg adataidat, mert így lesz izgalmas a játék :)"/>

        <hu.wuhanizer.notSoFar.ui.view.FontTextView
            android:layout_above="@+id/btn_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Neved:"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Társasági Telka"
            android:layout_marginBottom="30dp"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorHint"
            android:singleLine="true"/>

        <hu.wuhanizer.notSoFar.ui.view.FontTextView
            android:layout_above="@+id/btn_new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:text="Itt vagyok (FB/e-mail cím):"/>

<!--        <EditText-->
<!--            android:id="@+id/edit_birth_date"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:hint="Születési dátum"-->
<!--            android:layout_marginBottom="20dp"-->
<!--            android:inputType="date"/>-->

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_contact_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:hint="Kontakt link"
            android:backgroundTint="@android:color/white"
            android:textColor="@android:color/white"
            android:textColorHint="@color/colorHint"
            android:singleLine="true"/>

        <Button
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mentés"
            android:layout_gravity="right"/>

    </LinearLayout>
</layout>